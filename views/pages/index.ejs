<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>
</head>
<body class="container">

    <header>
        <% include ../partials/header %>
    </header>

    <main>
        <% if (fotos.length > 0) { %>
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th>URL</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i< fotos.length; i++) {%>
                                <tr onclick="location.href='/detalhe/<%= fotos[i]._id%>'" style="cursor:pointer;">
                                  <td ><%= fotos[i].nome %></td>
                                  <td><%= fotos[i].descricao %></td>
                                  <td><%= fotos[i].url %></td>
                                </tr>
                            <% } %>
                      </tbody>
                    </table>
                </div>
            </div>
        <% } else { %>
            <h3>Não há fotos cadastradas no momento</h3>
        <% }  %>
        <div class="row">
            <div class="col-md-12">
                <a href="/cadastro" class="btn btn-success" role="button">Novo</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <select id="escolas">
                    <option value="">Selecione</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <button type="button" class="btn btn-default" onclick="chamarAPI()">Chamar API</button>
            </div>
        </div>
    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>
</html>
